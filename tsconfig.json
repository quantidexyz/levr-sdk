{
  "include": ["src", "example", "test", "script", "packages/clanker-sdk/src"],
  "exclude": [
    "**/bak/*",
    "dist",
    "node_modules",
    "src/graphql/gen/*",
    "packages/clanker-sdk/src/cli"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",

    // Type checking
    "strict": true,
    "useDefineForClassFields": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "noEmit": true,

    // JavaScript support
    "allowJs": false,
    "checkJs": false,

    // Interop constraints
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "sourceMap": false,

    // Language and environment
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "paths": {
      "clanker-sdk": ["./packages/clanker-sdk/src/index.ts"],
      "clanker-sdk/v3": ["./packages/clanker-sdk/src/v3/index.ts"],
      "clanker-sdk/v4": ["./packages/clanker-sdk/src/v4/index.ts"]
    },

    // Skip type checking for node modules
    "skipLibCheck": true
  }
}
